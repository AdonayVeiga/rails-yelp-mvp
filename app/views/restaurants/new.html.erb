<div class="container">
  <h1>Add a Restaurant</h1>
</div>
<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit 'Create!', class: 'btn btn-primary' %>
  <% end %>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
</div>