<div class="container">
  <div class="card card-body">
    <h5 class="card-title">
      <%= @restaurant.name %>
    </h5>
    <h6 class="card-subtitle text-muted">
      <%= @restaurant.category.capitalize %>
    </h6>
    <p class="card-text">
      <%= @restaurant.address %>
    </p>
    <% if @restaurant.phone_number %>
      <p class="card-text">
        <%= @restaurant.phone_number %>
      </p>
    <% end %>
    <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
    <!-- <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %> -->
  </div>
</div>

<div class="container card">
  <%= simple_form_for [@restaurant,@review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit 'Review!', class: 'btn btn-primary' %>
  <% end %>
</div>

<div class="container">
  <% @restaurant.reviews.each do |review| %>
    <div class="card card-body">
      <h5 class="card-title">
        <%= review.rating %> stars
      </h5>
      <p class="card-text">
        <%= review.content %>
      </p>
    </div>
  <% end %>
</div>