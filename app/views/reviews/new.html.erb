<div class="container">
  <h1>Add a review</h1>
  <h2>Restaurant: <%= @restaurant.name %></h2>
</div>
<div class="container">
  <%= simple_form_for [@restaurant,@review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit 'Review!', class: 'btn btn-primary' %>
  <% end %>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
  <%= link_to "Back to restaurant", restaurant_path(@restaurant), class: "btn btn-primary" %>
</div>